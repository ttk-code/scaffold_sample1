<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>

  <table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.image.url if post.image? %></td>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Microposts</h1>
    </div>

  </div>
  <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.image.url if post.image? %></td>
        <td><%= post.title %></td>
      </tr>
    <% end %>
<% end %>

